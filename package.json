{
  "name": "@cyanheads/filesystem-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for platform-agnostic file capabilities, including advanced search and replace, and directory tree traversal",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "ts-node scripts/clean.ts",
    "rebuild": "npm run clean && npm run build",
    "tree": "ts-node --esm scripts/tree.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "dotenv": "^16.5.0",
    "sanitize-html": "^2.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "validator": "13.15.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "@types/node": "^22.14.1",
    "@types/sanitize-html": "^2.15.0",
    "@types/validator": "13.12.3"
  },
  "keywords": [
    "typescript",
    "MCP",
    "model-context-protocol",
    "filesystem",
    "file-operations",
    "search-replace",
    "LLM",
    "AI-integration",
    "server",
    "file-system"
  ],
  "author": "Casey Hand @cyanheads",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  }
}
